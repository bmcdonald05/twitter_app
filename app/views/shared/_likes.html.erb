<% if current_user.likes?(@tweet) %>
	<% link_to "Unlike", tweet_like_path(@tweet), method: :post %>
<% else %>
	<%= link_to "Like", tweet_like_path(@tweet), method: :post %>
<% end %>

<% @tweet.likes.count %>

liked by:
<% @tweet.likes.each do |like| %>
	<br />
	<% like.user.username %>
	<br />
<% end %>